{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "ServiceName": "ReportService",
      "DownstreamPathTemplate": "/api/reports/{everything}",
      "DownstreamScheme": "http",

      "UpstreamPathTemplate": "/report/reports/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "UpstreamScheme": "http"
    },
    {
      "UseServiceDiscovery": true,
      "ServiceName": "PersonService",
      "DownstreamPathTemplate": "/api/persons/{everything}",
      "DownstreamScheme": "http",

      "UpstreamPathTemplate": "/persons/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "UpstreamScheme": "http"
    },
    {
      "UseServiceDiscovery": true,
      "ServiceName": "PersonService",
      "DownstreamPathTemplate": "/api/contacts/{everything}",
      "DownstreamScheme": "http",

      "UpstreamPathTemplate": "/report/contacts/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "UpstreamScheme": "http"
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://web.apigateway:5000",
    "ServiceDiscoveryProvider": {
      "Host": "c_consul",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}